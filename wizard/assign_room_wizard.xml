<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_assign_room_wizard_form" model="ir.ui.view">
        <field name="name">assign.room.wizard.form</field>
        <field name="model">assign.room.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Room">
                    <group>
                        <field name="reservation_id" invisible="1"/>
                        <field name="room_type_id" readonly="1"/>
                        <field name="current_reservation_id" invisible="1" />
                        <field name="checkout_date" invisible="1"/>
                        <field name="room_id_domin" invisible="1"/>
                        <field name="room_id" string="Select Room"
                               invisible="checkout_date &lt; context_today()" domain="room_id_domin"/>
                    </group>

                    <div class="mt-2">
                        <label for="formatted_checkin_date" string="Check-in Date" class="me-2"/>
                        <field name="formatted_checkin_date" readonly="1" />
                    </div>

                    <div class="mt-2">
                        <label for="formatted_checkout_date" string="Check-out Date" class="me-2"/>
                        <field name="formatted_checkout_date" readonly="1" />
                    </div>
                <footer>
                    <button name="assign_room" string="Assign" type="object" class="btn-primary"
                        invisible="checkout_date &lt; context_today()" />

                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_assign_room_wizard" model="ir.actions.act_window">
        <field name="name">Assign Room</field>
        <field name="res_model">assign.room.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_assign_room_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>